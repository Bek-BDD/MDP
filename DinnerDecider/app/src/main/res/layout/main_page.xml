<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dd_logo"
        android:id="@+id/logo"
        android:contentDescription="@string/logo_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtChosenFood"
        android:fontFamily="monospace"
        android:layout_marginTop="16dp"
        android:text="@string/no_food_selected"
        android:textSize="20sp"
        android:layout_below="@+id/logo"/>

    <EditText
        android:id="@+id/edit_food"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/txtChosenFood"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:autofillHints="Burger, Cheese cake"
        android:fontFamily="monospace"
        android:hint="@string/add_new_food"
        android:inputType="text"
        android:padding="5dp" />

    <Button
        android:id="@+id/btn_addFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_food"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/vivid_cyan"
        android:fontFamily="monospace"
        android:text="@string/btn_add_food"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_decideFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/vivid_cyan"
        android:fontFamily="monospace"
        android:text="@string/decide"
        android:textAllCaps="false" />

</RelativeLayout>